
@{
    ViewData["Title"] = "Index";
}
@model ICollection<Product>
<div class=" container">
    <div class=" card mt-5">
        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Image</th>
                        <th>Price</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td><img width="40" src="@item.ImageUrl"/></td>
                            <td>@item.Price</td>
                            <td><a class="btn btn-info" asp-area="Manage" asp-action="Update" asp-route-id="@item.Id">Update</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>
</div>


